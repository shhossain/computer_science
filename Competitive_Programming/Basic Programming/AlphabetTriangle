#include<stdio.h>
#include<stdlib.h>

int main(int argc, char const *argv[])
{
    int c=65;    
    int i,j,k,m;    
  system("cls");  
    for(i=1;i<=5;i++)    
    {    
        for(j=5;j>=i;j--)    
            printf(" ");    
        for(k=1;k<=i;k++)    
            printf("%c",c++);    
            c--;    
        for(m=1;m<i;m++)    
            printf("%c",--c);    
        printf("\n");    
        c=65;    
    }    
return 0;  
}  


